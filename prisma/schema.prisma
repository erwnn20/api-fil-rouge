// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  email      String   @unique
  firstname  String?
  lastname   String
  password   String
  role       Role     @default(USER)
  created_at DateTime @default(now())

  JwtRefreshToken JwtRefreshToken[]
  BansReceived    Ban[]             @relation("UserBans")
  BansGiven       Ban[]             @relation("AdminBans")
}

enum Role {
  USER
  ADMIN
}

model Ban {
  id      Int       @id @default(autoincrement())
  userId  Int
  user    User      @relation("UserBans", fields: [userId], references: [id], onDelete: Cascade)
  adminId Int?
  admin   User?     @relation("AdminBans", fields: [adminId], references: [id], onDelete: SetNull)
  startAt DateTime @default(now())
  endAt   DateTime?
  reason  String
}

model JwtRefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int      @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
}
